<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff9045"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:paddingBottom="@dimen/activity_vertical_margin">

    <Button
        android:layout_width="80dip"
        android:layout_height="35dip"
        android:text="Registration"
        android:id="@+id/buttonRegister"
        android:background="#ff190c02"
        android:textColor="#ffffffff"
        android:layout_marginBottom="59dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/dropdownDay"
        android:layout_alignStart="@+id/dropdownDay"
        android:layout_alignRight="@+id/textfieldpassword"
        android:layout_alignEnd="@+id/textfieldpassword" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/textfieldpassword"
        android:text="password"
        android:background="#ffffffff"
        android:layout_above="@+id/buttonRegister"
        android:layout_alignLeft="@+id/textfieldEMail"
        android:layout_alignStart="@+id/textfieldEMail"
        android:layout_marginBottom="119dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/textfieldEMail"
        android:text="E-Mail"
        android:background="#ffffffff"
        android:layout_below="@+id/radioButtonFemale"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:text="Firstname"
        android:ems="10"
        android:id="@+id/textfieldFirstname"
        android:background="#ffffffff"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textfieldEMail"
        android:layout_alignStart="@+id/textfieldEMail"
        android:layout_marginTop="39dp"
        android:layout_alignRight="@+id/textfieldEMail"
        android:layout_alignEnd="@+id/textfieldEMail" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:text="Lastname"
        android:ems="10"
        android:id="@+id/textfieldLastname"
        android:background="#ffffffff"
        android:layout_below="@+id/textfieldFirstname"
        android:layout_alignLeft="@+id/textfieldFirstname"
        android:layout_alignStart="@+id/textfieldFirstname"
        android:layout_marginTop="23dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Female"
        android:id="@+id/radioButtonFemale"
        android:checked="false"
        android:layout_below="@+id/textfieldLastname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Male"
        android:id="@+id/radioButtonMale"
        android:checked="false"
        android:layout_alignTop="@+id/radioButtonFemale"
        android:layout_alignLeft="@+id/textfieldLastname"
        android:layout_alignStart="@+id/textfieldLastname" />

    <Spinner
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:id="@+id/dropdownDay"
        android:spinnerMode="dropdown"
        android:background="#ffffffff"
        android:layout_marginBottom="50dp"
        android:layout_above="@+id/buttonRegister"
        android:layout_alignLeft="@+id/textfieldpassword"
        android:layout_alignStart="@+id/textfieldpassword" />

    <Spinner
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:id="@+id/dropdownMonth"
        android:background="#ffffffff"

        android:spinnerMode="dropdown"
        android:layout_alignTop="@+id/dropdownDay"
        android:layout_toRightOf="@+id/dropdownDay"
        android:layout_toEndOf="@+id/dropdownDay"
        android:layout_marginLeft="15dp" />

    <Spinner
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/dropdownYear"
        android:background="#ffffffff"
        android:spinnerMode="dropdown"
        android:layout_alignTop="@+id/dropdownMonth"
        android:layout_toRightOf="@+id/dropdownMonth"
        android:layout_marginLeft="15dp"
        android:layout_alignRight="@+id/textfieldpassword"
        android:layout_alignEnd="@+id/textfieldpassword" />

</RelativeLayout>
