package at.intelligentminds.client;

import static org.junit.Assert.*;
import junit.framework.Assert;

import org.junit.Before;
import org.junit.Test;

public class TestLogin {

  private ConnectionProvider provider;
  
  @Before
  public void setUp() throws Exception {
    provider = ConnectionProvider.getInstance();
  }

  @Test
  /**
   * should succeed
   */   
  public void testLoginSuccess() {
    boolean loginSucceeded = provider.performLogin("test", "p@$$w0rd");
    
    assertTrue(loginSucceeded);
  }
  
  @Test
  /**
   * should fail
   * wrong user
   */   
  public void testLoginFails() {
    boolean loginSucceeded = provider.performLogin("testNotAllowed", "p@$$w0rd");
    
    assertFalse(loginSucceeded);
  }
  
  @Test
  /**
   * should fail
   * wrong password
   */   
  public void testLoginFailsWrongPassword() {
    boolean loginSucceeded = provider.performLogin("test", "ups");
    
    assertFalse(loginSucceeded);
  }
}
